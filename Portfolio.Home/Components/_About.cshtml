@model AboutInfo

<!-- About Section -->
<section id="about" class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-4 text-center mb-4 mb-lg-0">
                <img src="@Model.ProfileImageUrl" class="img-fluid rounded-circle border border-primary-yellow p-2 shadow" alt="Profile" style="max-width: 250px;">
            </div>
            <div class="col-lg-8">
                <h2 class="text-primary-yellow mb-4">ABOUT ME</h2>
                <p class="text-light">
                    @Model.Bio
                </p>
                <div class="timeline mt-5">
                    @foreach (var item in Model.Timeline)
                    {
                        <div class="timeline-item">
                            <h5 class="text-primary-yellow">@item.Title - @item.Company</h5>
                            <p class="small text-muted">@item.Period</p>
                            <p class="text-light">@item.Description</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
