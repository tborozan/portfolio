@inherits LayoutComponentBase

<header>
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="#hero">
                <i class="bi bi-terminal-fill me-2"></i>TONI_BOROZAN
            </a>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#skills">Skills</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#projects">Projects</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main role="main">
    @Body
</main>

<footer class="text-center text-lg-start mt-5">
    <div class="container p-4">
        <div class="row">
            <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                <h5 class="text-uppercase text-primary-yellow">Software Developer</h5>
                <p class="text-muted">
                    Specializing in .NET, Cloud and Scalable architectures.
                </p>
            </div>
            <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                <h5 class="text-uppercase text-primary-yellow">Quick Links</h5>
                <ul class="list-unstyled mb-0">
                    <li><a href="#about" class="text-light text-decoration-none">About</a></li>
                    <li><a href="#skills" class="text-light text-decoration-none">Skills</a></li>
                    <li><a href="#projects" class="text-light text-decoration-none">Projects</a></li>
                </ul>
            </div>
            <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                <h5 class="text-uppercase text-primary-yellow">Connect</h5>
                <ul class="list-unstyled">
                    <li><a href="#" class="text-light text-decoration-none"><i class="bi bi-linkedin me-2"></i>LinkedIn</a></li>
                    <li><a href="#" class="text-light text-decoration-none"><i class="bi bi-github me-2"></i>GitHub</a></li>
                    <li><a href="#" class="text-light text-decoration-none"><i class="bi bi-envelope me-2"></i>Email</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="text-center p-3 border-top border-secondary">
        &copy; @DateTime.Now.Year - Toni Borozan - Built with Blazor WASM
    </div>
</footer>
